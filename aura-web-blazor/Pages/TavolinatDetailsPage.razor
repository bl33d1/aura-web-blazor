@using aura_web_blazor.Components
@page "/tavolinat/{tavolina}/{kaPorosi:bool}"
<style>
    .mud-tabs-panels {
        padding: 0px !important;
    }
</style>
<PageTitle>Tavolina: @Tavolina</PageTitle>

<PageTitleComponent Text="@GetTitle()"></PageTitleComponent>

<ButtonKthehuComponent Text="Kthehu te tavolinat" Link="/tavolinat"></ButtonKthehuComponent>
<SimpleTableTavolinaDetailsComponent Tavolina="@Tavolina" IsActive="@kaPorosi"></SimpleTableTavolinaDetailsComponent>


<MudTabs Elevation="1" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    @if (kaPorosi)
    {
        <MudTabPanel Text="Aktivet">
            <TableDetajetSipasTavolinesComponent Aktive=true Tavolina="@Tavolina"></TableDetajetSipasTavolinesComponent>
        </MudTabPanel>
    }
    <MudTabPanel Text="Te mbyullrat">
        <TableDetajetSipasTavolinesComponent Aktive=false Tavolina="@Tavolina"></TableDetajetSipasTavolinesComponent>
    </MudTabPanel>
    
</MudTabs>




@code {
    [Parameter]
    public string Tavolina { get; set; }
    [Parameter]
    public bool kaPorosi { get; set; }

    string GetTitle()
    {
        return "Tavolina: " + Tavolina;
    }
}
