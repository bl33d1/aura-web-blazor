@using Microsoft.JSInterop
@inject NavigationManager UriHelper
@inject IJSRuntime jsRuntime

  <footer class="footer d-flex justify-content-between" style="max-width:600px !important;min-height:45px;background-color:@(MainColor)" id="footer">
            <div class="col-4"style="width:33%;text-align:center;">
                <MudButton Style="width:100%;color:white; "   OnClick="@(() => NavigateTo("/tavolinat"))" >
                    <MudIcon Color="Color.Surface" Icon ="@Icons.Material.Filled.TableBar"></MudIcon>
                </MudButton>
                @*<MudText>@CurrentUri</MudText>*@
            </div>
            <div class="col-4" style="width:33%;text-align:center;">
                <MudButton Style="width:100%;color:white; "  OnClick="@(() => NavigateTo("/"))" >
                    <MudIcon Color="Color.Surface" Icon ="@Icons.Material.Filled.Home"></MudIcon>
                </MudButton>
            </div>
            <div class="col-4"style="width:33%;text-align:center;">
                <MudButton Style="width:100%;color:white; "  OnClick="@(() => NavigateTo("/produktet"))" >
                    <MudIcon Color="Color.Surface" Icon ="@Icons.Material.Filled.BarChart"></MudIcon>
                </MudButton>
            </div>
  </footer>

@code {

    [Inject] IJSRuntime JS { get; set; }

    [Parameter]
    public string MainColor { get; set; }
    public string Title { get; set; }


    protected void NavigateTo(string page)
    {
        UriHelper.NavigateTo(page);
    }

}


